@page
@model IndexModel
@{
    ViewData["Title"] = "ThiExam | Từ đề giấy sang đề thi online trong tích tắc";
    Layout = null; // Không dùng _Layout chung để giữ trọn vẹn thiết kế landing page
}

<!DOCTYPE html>
<html lang="vi" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: "#1392ec",
                            dark: "#0e76be",
                            light: "#4db0f2"
                        },
                        background: {
                            light: "#f6f7f8",
                            dark: "#101a22"
                        }
                    },
                    fontFamily: { sans: ["Inter", "sans-serif"] },
                    boxShadow: {
                        'soft': '0 10px 40px -10px rgba(0,0,0,0.1)',
                        'intense': '0 20px 60px -15px rgba(19, 146, 236, 0.2)'
                    }
                }
            }
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        [v-cloak] {
            display: none;
        }
    </style>
</head>
<body class="bg-white text-slate-900 overflow-x-hidden">

    <nav id="navbar" class="fixed top-0 z-[60] w-full transition-all duration-300 border-b border-transparent py-5">
        <div class="max-w-7xl mx-auto px-6 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="bg-primary p-2 rounded-xl text-white shadow-lg shadow-primary/30">
                    <span class="material-symbols-outlined text-2xl font-bold">menu_book</span>
                </div>
                <span class="text-2xl font-extrabold tracking-tight text-slate-900">ThiExam</span>
            </div>

            <div class="hidden lg:flex items-center gap-10">
                <a href="#how-it-works" class="text-sm font-semibold text-slate-600 hover:text-primary transition-colors">Quy trình</a>
                <a href="#demo" class="text-sm font-semibold text-slate-600 hover:text-primary transition-colors">Dùng thử</a>
                <a href="#features" class="text-sm font-semibold text-slate-600 hover:text-primary transition-colors">Tính năng</a>
                <a href="#pricing" class="text-sm font-semibold text-slate-600 hover:text-primary transition-colors">Bảng giá</a>
            </div>

            <div class="flex items-center gap-5">
                @if (Model.IsLoggedIn)
                {
                    <div class="relative group">
                        <button class="flex items-center gap-3 bg-slate-50 border border-slate-200 pl-2 pr-4 py-1.5 rounded-full hover:bg-white transition-all">
                            <div class="w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center font-bold text-sm">
                                @(Model.FullName?[0].ToString().ToUpper() ?? Model.Username?[0].ToString().ToUpper() ?? "U")
                            </div>
                            <span class="text-sm font-bold text-slate-700">@Model.FullName</span>
                            <span class="material-symbols-outlined text-slate-400 text-sm">expand_more</span>
                        </button>
                        
                        <!-- Dropdown Menu -->
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-2xl shadow-soft border border-slate-100 py-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-[70]">
                            <a href="/Dashboard" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined text-lg">dashboard</span>
                                Bảng điều khiển
                            </a>
                            <a href="/Profile" class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined text-lg">person</span>
                                Hồ sơ của tôi
                            </a>
                            <div class="h-px bg-slate-100 my-2 mx-4"></div>
                            <form method="post" asp-page-handler="Logout">
                                <button type="submit" class="w-full flex items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors">
                                    <span class="material-symbols-outlined text-lg">logout</span>
                                    Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a href="/Account/Login" class="hidden sm:block text-sm font-bold text-slate-700 hover:text-primary">Đăng nhập</a>
                    <a href="/Account/Register" class="bg-primary text-white text-sm font-bold px-6 py-2.5 rounded-full hover:bg-primary-dark transition-all shadow-md shadow-primary/20 active:scale-95">
                        Đăng ký
                    </a>
                }
            </div>
        </div>
    </nav>

    <main>
        <section class="relative pt-32 pb-24 overflow-hidden">
            <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-16 items-center">
                <div class="relative z-10 flex flex-col gap-10">
                    <div class="space-y-6">
                        <span class="inline-flex items-center gap-2 text-primary font-bold tracking-widest text-[11px] uppercase bg-primary/10 px-4 py-1.5 rounded-full ring-1 ring-primary/20">
                            <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                            Đề thi ứng dụng AI
                        </span>
                        <h1 class="text-6xl xl:text-7xl font-black leading-[1.05] tracking-tight text-slate-900">
                            Số hóa đề thi <span class="text-primary">chỉ trong vài giây</span>
                        </h1>
                        <p class="text-xl text-slate-500 leading-relaxed max-w-xl">
                            Ngừng nhập liệu thủ công. Hãy để AI chuyển đổi các bản quét, tệp PDF hoặc ảnh chụp đề thi thành định dạng số chuẩn xác 99.9%.
                        </p>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-5">
                        <a href="/Account/Register" class="group bg-primary text-white h-16 px-10 rounded-2xl font-bold text-lg hover:shadow-intense hover:-translate-y-1 transition-all flex items-center justify-center gap-3">
                            Bắt đầu miễn phí
                            <span class="material-symbols-outlined transition-transform group-hover:translate-x-1">arrow_forward</span>
                        </a>
                        <button class="bg-white border-2 border-slate-100 h-16 px-10 rounded-2xl font-bold text-lg text-slate-700 hover:bg-slate-50 hover:border-slate-200 transition-all flex items-center justify-center gap-2">
                            <span class="material-symbols-outlined text-primary">play_circle</span>
                            Xem Demo
                        </button>
                    </div>

                    <div class="flex items-center gap-4 py-4 border-t border-slate-100">
                        <div class="flex -space-x-3">
                            <img src="https://picsum.photos/100/100?random=1" class="w-10 h-10 rounded-full border-2 border-white ring-1 ring-slate-100" />
                            <img src="https://picsum.photos/100/100?random=2" class="w-10 h-10 rounded-full border-2 border-white ring-1 ring-slate-100" />
                            <img src="https://picsum.photos/100/100?random=3" class="w-10 h-10 rounded-full border-2 border-white ring-1 ring-slate-100" />
                            <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-[10px] font-bold text-slate-400 ring-1 ring-slate-100 border-2 border-white">500+</div>
                        </div>
                        <p class="text-sm font-medium text-slate-500">Được tin dùng bởi hơn <span class="text-slate-900 font-bold">500+ giáo viên</span></p>
                    </div>
                </div>

                <div class="relative">
                    <div class="absolute -inset-10 bg-primary/10 rounded-[60px] blur-3xl -z-10 rotate-3 animate-pulse"></div>
                    <div class="bg-white rounded-[2rem] shadow-intense overflow-hidden border border-slate-200 flex flex-col md:flex-row min-h-[480px]">
                        <div class="flex-1 bg-slate-50/50 p-8 flex flex-col gap-6 border-b md:border-b-0 md:border-r border-slate-100 relative overflow-hidden group">
                            <div class="absolute top-4 left-4 bg-red-500/10 text-red-600 px-3 py-1 text-[10px] font-bold rounded-full uppercase tracking-wider">Đề giấy truyền thống</div>
                            <div class="mt-10 space-y-6 opacity-40">
                                <div class="h-4 w-3/4 bg-slate-300 rounded-full"></div>
                                <div class="h-12 w-full border-2 border-dashed border-slate-200 rounded-xl"></div>
                                <div class="space-y-4">
                                    <div class="h-2 bg-slate-200 rounded-full w-full"></div>
                                    <div class="h-2 bg-slate-200 rounded-full w-2/3"></div>
                                </div>
                            </div>
                            <div class="absolute inset-0 bg-gradient-to-t from-slate-50 to-transparent pointer-events-none"></div>
                        </div>
                        <div class="flex-1 p-8 flex flex-col gap-6 relative bg-white">
                            <div class="absolute top-4 left-4 bg-primary/10 text-primary px-3 py-1 text-[10px] font-bold rounded-full uppercase tracking-wider">Đã số hóa bằng AI</div>
                            <div class="mt-10 space-y-8">
                                <div class="flex items-center justify-between">
                                    <div class="h-6 w-1/2 bg-slate-100 rounded-full"></div>
                                    <span class="material-symbols-outlined text-green-500 text-2xl animate-bounce">verified</span>
                                </div>
                                <div class="p-5 rounded-2xl border-2 border-primary/20 bg-primary/[0.02] space-y-5">
                                    <div class="h-12 w-full bg-primary/10 rounded-xl border-2 border-primary flex items-center px-4 gap-4 ring-4 ring-primary/10">
                                        <div class="w-5 h-5 rounded-full bg-primary flex items-center justify-center text-[10px] text-white">✓</div>
                                        <div class="h-2 w-1/2 bg-primary/40 rounded-full"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-slate-900 py-32 relative overflow-hidden" id="how-it-works">
            <div class="absolute top-0 right-0 w-96 h-96 bg-primary/10 blur-[120px] rounded-full -translate-y-1/2"></div>
            <div class="max-w-7xl mx-auto px-6 relative z-10">
                <div class="text-center max-w-2xl mx-auto mb-20 space-y-4">
                    <h2 class="text-4xl font-bold tracking-tight text-white">Quy trình 3 bước</h2>
                    <p class="text-slate-400 text-lg">Chuyển đổi số dễ dàng như việc chụp một bức ảnh.</p>
                </div>
                <div class="grid lg:grid-cols-3 gap-12 relative">
                    <div class="hidden lg:block absolute top-[60px] left-[15%] right-[15%] h-px bg-gradient-to-r from-transparent via-slate-700 to-transparent"></div>

                    <div class="flex flex-col items-center text-center gap-8 group">
                        <div class="w-32 h-32 rounded-3xl bg-slate-800 border border-slate-700 flex items-center justify-center text-primary shadow-2xl transition-all duration-500 group-hover:bg-primary group-hover:text-white group-hover:scale-110">
                            <span class="material-symbols-outlined text-6xl font-light">cloud_upload</span>
                        </div>
                        <h3 class="text-2xl font-bold text-white">1. Tải lên</h3>
                        <p class="text-slate-400 text-sm">Tải lên file PDF, Word hoặc ảnh chụp đề thi.</p>
                    </div>

                    <div class="flex flex-col items-center text-center gap-8 group">
                        <div class="w-32 h-32 rounded-3xl bg-slate-800 border border-slate-700 flex items-center justify-center text-primary shadow-2xl transition-all duration-500 group-hover:bg-primary group-hover:text-white">
                            <span class="material-symbols-outlined text-6xl font-light">psychology</span>
                        </div>
                        <h3 class="text-2xl font-bold text-white">2. AI Xử lý</h3>
                        <p class="text-slate-400 text-sm">AI tự nhận diện câu hỏi, đáp án và hình ảnh minh họa.</p>
                    </div>

                    <div class="flex flex-col items-center text-center gap-8 group">
                        <div class="w-32 h-32 rounded-3xl bg-slate-800 border border-slate-700 flex items-center justify-center text-primary shadow-2xl transition-all duration-500 group-hover:bg-primary group-hover:text-white">
                            <span class="material-symbols-outlined text-6xl font-light">rocket_launch</span>
                        </div>
                        <h3 class="text-2xl font-bold text-white">3. Xuất bản</h3>
                        <p class="text-slate-400 text-sm">Tổ chức thi online ngay lập tức qua link hoặc mã QR.</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-32 bg-background-light" id="demo">
            <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-20 items-center">
                <div class="space-y-8">
                    <h2 class="text-5xl font-black text-slate-900 leading-tight">Trải nghiệm <span class="text-primary">sức mạnh AI</span></h2>
                    <p class="text-xl text-slate-500 leading-relaxed">Dán nội dung câu hỏi thô vào đây. Xem AI cấu trúc dữ liệu ngay lập tức.</p>
                    <ul class="grid gap-5">
                        <li class="flex items-center gap-4 text-slate-700 font-medium">
                            <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
                                <span class="material-symbols-outlined text-lg">check</span>
                            </div>
                            Tự động phát hiện đáp án đúng
                        </li>
                        <li class="flex items-center gap-4 text-slate-700 font-medium">
                            <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
                                <span class="material-symbols-outlined text-lg">check</span>
                            </div>
                            Hỗ trợ công thức Toán học LaTeX
                        </li>
                    </ul>
                </div>

                <div class="bg-white rounded-3xl shadow-soft border border-slate-200 overflow-hidden ring-1 ring-slate-100">
                    <div class="p-5 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                        <div class="flex gap-2">
                            <div class="w-3 h-3 rounded-full bg-red-400"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                            <div class="w-3 h-3 rounded-full bg-green-400"></div>
                        </div>
                        <span class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">Trình chuyển đổi trực tiếp</span>
                    </div>

                    <div class="p-8 space-y-8">
                        <div class="space-y-3">
                            <label class="text-[11px] font-black text-slate-500 uppercase tracking-wider">Đầu vào (Văn bản thô)</label>
                            <textarea id="demoInput" class="w-full h-40 p-5 bg-slate-50 border-2 border-slate-100 rounded-2xl font-mono text-sm focus:ring-primary focus:border-primary transition-all resize-none">1. Thủ đô của Việt Nam là gì?
A. TP. HCM
B. Hà Nội
C. Đà Nẵng
D. Cần Thơ</textarea>
                        </div>

                        <div class="relative flex justify-center items-center">
                            <div class="h-px bg-slate-100 w-full"></div>
                            <button id="runDemo" class="absolute bg-white px-4 py-2 border border-slate-200 rounded-full text-[11px] font-bold text-primary hover:scale-105 transition-transform">
                                Chạy AI ngay
                            </button>
                        </div>

                        <div class="space-y-4">
                            <label class="text-[11px] font-black text-slate-500 uppercase tracking-wider block">Kết quả số hóa</label>
                            <div id="demoOutput" class="min-h-[180px] rounded-2xl bg-primary/[0.03] border-2 border-primary/10 p-6 space-y-6">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-32 bg-white" id="pricing">
            <div class="max-w-7xl mx-auto px-6">
                <div class="text-center max-w-2xl mx-auto mb-20">
                    <h2 class="text-4xl font-black text-slate-900 mb-4">Bảng giá minh bạch</h2>
                    <p class="text-lg text-slate-500">Phù hợp cho cả giáo viên cá nhân và tổ chức giáo dục.</p>
                </div>

                <div class="grid lg:grid-cols-3 gap-8">
                    <div class="p-10 rounded-[2.5rem] border-2 border-slate-100 bg-slate-50/50 flex flex-col">
                        <h3 class="text-xl font-bold mb-2">Miễn phí</h3>
                        <div class="text-5xl font-black mb-8">0đ <span class="text-base font-normal text-slate-400">/tháng</span></div>
                        <ul class="space-y-4 mb-10 flex-grow text-sm">
                            <li class="flex gap-3"><span class="text-primary">✔</span> 3 Đề thi / tháng</li>
                            <li class="flex gap-3"><span class="text-primary">✔</span> AI trích xuất cơ bản</li>
                        </ul>
                        <button class="w-full py-4 border-2 border-primary text-primary rounded-2xl font-black">Bắt đầu</button>
                    </div>
                    <div class="p-10 rounded-[2.5rem] border-primary bg-white shadow-intense scale-105 z-10 ring-8 ring-primary/5 flex flex-col">
                        <h3 class="text-xl font-bold mb-2">Chuyên nghiệp</h3>
                        <div class="text-5xl font-black mb-8">199k <span class="text-base font-normal text-slate-400">/tháng</span></div>
                        <ul class="space-y-4 mb-10 flex-grow text-sm">
                            <li class="flex gap-3"><span class="text-primary">✔</span> Không giới hạn đề thi</li>
                            <li class="flex gap-3"><span class="text-primary">✔</span> AI nhận diện hình ảnh</li>
                            <li class="flex gap-3"><span class="text-primary">✔</span> Xuất file PDF/Word</li>
                        </ul>
                        <button class="w-full py-4 bg-primary text-white rounded-2xl font-black shadow-lg shadow-primary/20">Nâng cấp ngay</button>
                    </div>
                    <div class="p-10 rounded-[2.5rem] border-2 border-slate-100 bg-slate-50/50 flex flex-col">
                        <h3 class="text-xl font-bold mb-2">Tổ chức</h3>
                        <div class="text-5xl font-black mb-8">Liên hệ</div>
                        <ul class="space-y-4 mb-10 flex-grow text-sm">
                            <li class="flex gap-3"><span class="text-primary">✔</span> Tích hợp LMS</li>
                            <li class="flex gap-3"><span class="text-primary">✔</span> Đào tạo AI theo yêu cầu</li>
                        </ul>
                        <button class="w-full py-4 border-2 border-primary text-primary rounded-2xl font-black">Liên hệ ngay</button>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-slate-900 pt-24 pb-12">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <div class="flex items-center justify-center gap-3 mb-8">
                <div class="bg-primary p-2 rounded-xl text-white">
                    <span class="material-symbols-outlined text-2xl font-bold">menu_book</span>
                </div>
                <span class="text-2xl font-extrabold text-white">ThiExam</span>
            </div>
            <p class="text-slate-400 max-w-md mx-auto mb-12">Nâng tầm khảo thí trực tuyến với công nghệ trí tuệ nhân tạo hiện đại nhất.</p>
            <div class="pt-12 border-t border-slate-800 text-slate-600 text-[11px] uppercase tracking-widest">
                © 2024 THIEXAM INC. BUILT FOR EDUCATORS.
            </div>
        </div>
    </footer>

    <script>
        // Xử lý hiệu ứng Navbar khi cuộn
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 20) {
                navbar.classList.add('bg-white/80', 'backdrop-blur-md', 'border-slate-200', 'shadow-sm', 'py-3');
                navbar.classList.remove('bg-transparent', 'border-transparent', 'py-5');
            } else {
                navbar.classList.remove('bg-white/80', 'backdrop-blur-md', 'border-slate-200', 'shadow-sm', 'py-3');
                navbar.classList.add('bg-transparent', 'border-transparent', 'py-5');
            }
        });

        // Xử lý Demo giả lập (Thay thế cho Gemini Service trong React)
        const runBtn = document.getElementById('runDemo');
        const demoInput = document.getElementById('demoInput');
        const demoOutput = document.getElementById('demoOutput');

        runBtn.addEventListener('click', () => {
            const text = demoInput.value;
            demoOutput.innerHTML = `<div class="animate-pulse flex space-y-4 flex-col">
                <div class="h-4 bg-slate-200 rounded w-3/4"></div>
                <div class="h-10 bg-white rounded-xl border border-slate-100"></div>
                <div class="h-10 bg-white rounded-xl border border-slate-100"></div>
            </div>`;

            setTimeout(() => {
                // Logic xử lý text đơn giản để hiển thị demo
                const question = text.split('\n')[0];
                const options = text.split('\n').slice(1).filter(t => t.trim() !== '');

                let html = `
                    <div class="space-y-4">
                        <div class="flex items-start gap-3">
                            <span class="bg-primary text-white text-[10px] font-black px-2 py-0.5 rounded-full">Q1</span>
                            <p class="text-slate-800 font-bold">${question}</p>
                        </div>
                        <div class="pl-8 space-y-2">
                `;

                options.forEach(opt => {
                    const isCorrect = opt.includes('B.') || opt.includes('Hà Nội'); // Giả lập AI nhận diện
                    html += `
                        <div class="flex items-center gap-3 p-3 rounded-xl border ${isCorrect ? 'bg-green-50 border-green-200 text-green-700 font-bold' : 'bg-white border-slate-100 text-slate-500'}">
                            <div class="w-5 h-5 rounded-full flex items-center justify-center border ${isCorrect ? 'bg-green-500 text-white border-green-500' : 'border-slate-200'}">
                                ${isCorrect ? '✓' : ''}
                            </div>
                            <span>${opt}</span>
                            ${isCorrect ? '<span class="ml-auto text-[9px] uppercase tracking-tighter opacity-70">AI Detected</span>' : ''}
                        </div>
                    `;
                });

                html += `</div></div>`;
                demoOutput.innerHTML = html;
            }, 1000);
        });

        // Chạy demo lần đầu
        runBtn.click();
    </script>
</body>
</html>