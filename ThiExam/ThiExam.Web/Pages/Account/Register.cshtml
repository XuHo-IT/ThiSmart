@page
@model ThiExam.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null; // Giữ giao diện độc lập cho trang đăng ký
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ThiExam</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f6f7f8;
            color: #0f172a;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            display: inline-block;
            vertical-align: middle;
            user-select: none;
        }

        .register-card {
            box-shadow: 0 10px 40px -15px rgba(0, 0, 0, 0.1);
        }

        .input-group:focus-within {
            border-color: #1392ec;
            ring: 4px;
            ring-color: rgba(19, 146, 236, 0.1);
        }

        .watermark {
            position: fixed;
            bottom: -20px;
            right: -20px;
            opacity: 0.03;
            pointer-events: none;
            user-select: none;
            font-size: 240px;
            font-weight: 900;
            line-height: 1;
            letter-spacing: -0.05em;
        }

        /* Custom styling for ASP.NET Validation Summary */
        .validation-summary-errors ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col">
    <header class="w-full bg-white border-b border-slate-200 py-4 px-6 md:px-10 flex items-center justify-between sticky top-0 z-50">
        <a href="/Index" class="flex items-center gap-2 hover:opacity-80 transition-opacity">
            <div class="text-[#1392ec]">
                <svg width="28" height="28" viewBox="0 0 48 48" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M4 42.4379C4 42.4379 14.0962 36.0744 24 41.1692C35.0664 46.8624 44 42.2078 44 42.2078L44 7.01134C44 7.01134 35.068 11.6577 24.0031 5.96913C14.0971 0.876274 4 7.27094 4 7.27094L4 42.4379Z" />
                </svg>
            </div>
            <span class="text-xl font-bold text-slate-800 tracking-tight">ThiExam</span>
        </a>
        <div class="hidden sm:block">
            <span class="text-sm text-slate-500 font-medium">Bắt đầu hành trình số hóa giáo dục</span>
        </div>
    </header>

    <main class="flex-1 flex flex-col items-center justify-center px-4 py-12 relative z-10">
        <div class="w-full max-w-[500px] bg-white rounded-2xl border border-slate-100 p-8 md:p-10 register-card transition-all">

            <div class="flex flex-col items-center text-center mb-8">
                <div class="w-16 h-16 bg-[#1392ec15] rounded-full flex items-center justify-center text-[#1392ec] mb-4">
                    <span class="material-symbols-outlined text-3xl">school</span>
                </div>
                <h2 class="text-2xl font-bold text-slate-900">Tạo tài khoản mới</h2>
                <p class="text-slate-500 text-[15px] mt-2">Tham gia cùng hàng ngàn giáo viên số hóa đề thi hôm nay.</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-600 text-sm">
                    <div class="flex items-center gap-2 font-bold mb-2">
                        <i data-lucide="alert-circle" class="w-5 h-5 shrink-0"></i>
                        <span>Thông báo lỗi</span>
                    </div>
                    <div asp-validation-summary="All" class="text-xs"></div>
                </div>
            }

            <form method="post" id="registerForm" class="space-y-5">

                <div class="space-y-1.5">
                    <label asp-for="Input.Username" class="text-sm font-semibold text-slate-700 block">Tên đăng nhập</label>
                    <div class="relative group">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i data-lucide="at-sign" class="w-5 h-5"></i>
                        </span>
                        <input asp-for="Input.Username" class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#1392ec15] focus:border-[#1392ec] transition-all text-slate-800" placeholder="username" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.FullName" class="text-sm font-semibold text-slate-700 block">Họ và tên</label>
                    <div class="relative group">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i data-lucide="user" class="w-5 h-5"></i>
                        </span>
                        <input asp-for="Input.FullName" class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#1392ec15] focus:border-[#1392ec] transition-all text-slate-800" placeholder="Nguyễn Văn A" />
                    </div>
                    <span asp-validation-for="Input.FullName" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.Email" class="text-sm font-semibold text-slate-700 block">Email Address</label>
                    <div class="relative group">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i data-lucide="mail" class="w-5 h-5"></i>
                        </span>
                        <input asp-for="Input.Email" class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#1392ec15] focus:border-[#1392ec] transition-all text-slate-800" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.Password" class="text-sm font-semibold text-slate-700 block">Mật khẩu</label>
                    <div class="relative group">
                        <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400">
                            <i data-lucide="lock" class="w-5 h-5"></i>
                        </span>
                        <input asp-for="Input.Password" id="password" type="password" class="w-full pl-10 pr-12 py-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#1392ec15] focus:border-[#1392ec] transition-all text-slate-800" placeholder="••••••••" />
                        <button type="button" id="togglePassword" class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600">
                            <i data-lucide="eye" class="w-5 h-5" id="eyeIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-xs text-red-500"></span>
                </div>

                <div class="space-y-1.5">
                    <label asp-for="Input.ConfirmPassword" class="text-sm font-semibold text-slate-700 block">Xác nhận mật khẩu</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="w-full px-4 py-3 rounded-lg border border-slate-200 bg-slate-50 focus:bg-white focus:outline-none focus:ring-4 focus:ring-[#1392ec15] focus:border-[#1392ec] transition-all text-slate-800" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-xs text-red-500"></span>
                </div>

                <button type="submit" id="registerBtn" class="w-full bg-[#1392ec] hover:bg-[#1181d1] text-white font-bold py-3.5 px-4 rounded-lg shadow-lg shadow-[#1392ec30] flex items-center justify-center gap-2 transition-all transform active:scale-[0.98] mt-4">
                    <span id="btnText">Tạo tài khoản</span>
                    <div id="btnLoading" class="hidden items-center gap-2">
                        <svg class="animate-spin h-5 w-5 text-white" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        <span>Đang đăng ký...</span>
                    </div>
                </button>
            </form>

            <div class="mt-8 pt-6 border-t border-slate-100 text-center">
                <p class="text-slate-500 text-sm">
                    Đã có tài khoản?
                    <a href="/Account/Login" class="text-[#1392ec] font-bold hover:underline">Đăng nhập</a>
                </p>
            </div>
        </div>

        <div class="mt-10 flex gap-8 justify-center">
            <a href="#" class="text-xs font-medium text-slate-400 hover:text-[#1392ec] transition-colors">Chính sách bảo mật</a>
            <a href="#" class="text-xs font-medium text-slate-400 hover:text-[#1392ec] transition-colors">Điều khoản dịch vụ</a>
            <a href="#" class="text-xs font-medium text-slate-400 hover:text-[#1392ec] transition-colors">Hỗ trợ</a>
        </div>
    </main>

    <div class="watermark hidden lg:block uppercase">ThiSmart</div>

    <!-- Scripting -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Password Visibility
        const toggleBtn = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        toggleBtn.addEventListener('click', () => {
            const isPassword = passwordField.type === 'password';
            passwordField.type = isPassword ? 'text' : 'password';
            // Toggle Lucide icon
            eyeIcon.setAttribute('data-lucide', isPassword ? 'eye-off' : 'eye');
            lucide.createIcons();
        });

        // Loading state
        document.getElementById('registerForm').addEventListener('submit', function (e) {
            if ($(this).valid()) {
                document.getElementById('btnText').classList.add('hidden');
                document.getElementById('btnLoading').classList.remove('hidden');
                document.getElementById('registerBtn').disabled = true;
            }
        });
    </script>
</body>
</html>