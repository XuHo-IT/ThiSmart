<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ThiSmart - Hệ thống thi trực tuyến thông minh" />
    <title>@ViewData["Title"] - ThiSmart</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom Login CSS -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <!-- 
        Layout riêng cho trang Login - Fullscreen, không header/footer
        Thiết kế theo nguyên tắc: Focus vào action chính (đăng nhập)
    -->
    <main class="login-main">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
